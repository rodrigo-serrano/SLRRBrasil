package java.game.parts.engines.CHT16;

import java.util.*;
import java.util.resource.*;
import java.game.*;
import java.game.parts.*;
import java.game.parts.enginepart.*;
import java.game.parts.enginepart.block.block_inline.*;
import java.game.cars.*;


public class block extends Block_Inline_OHC
{
	public block( int id )
	{
		super( id );
		name = "CHT 1.6 block";
		description = "";

		value = tHUF2USD(63.469);
		brand_new_prestige_value = 76.64;
		setMaxWear(kmToMaxWear(4200000.0));

		bore = 77.0;

		crankshaft_slot_ID = 33;
		crankshaft_bearing_slot_ID = 41;
		cylinder_head_slot_ID = 19;
		transmission_slot_ID = 35;
		oil_pan_slot_ID = 31;

		cylinder_length_from_top = 137.66;
		crank_center_to_cylinder_top = 232.65;

		rpm_idle = 900.0;
		time_spark_min	= sparkAngleTo4cycleTime(319.0);
		time_spark_inc	= sparkAngleTo4cycleTime(368.0)-time_spark_min;
		time_spark_RPM0	= 1250;
		time_spark_RPM1	= 10000;
		RPM_limit	= 10000;

		cylinders	= 4;

		check4warnings();
	}

	public void updatevariables()
	{
		super.updatevariables();

		if (the_car)
		{
			SfxTable tab;
			if (tab = the_car.getSfxTable(0))
			{
				tab.clear();
				tab.addItem(new ResourceRef(parts.engines.CHT16:0x000000A2r), 3500.0,  500.0, 6500.0, 0.42, 0.42);
				tab.addItem(new ResourceRef(parts.engines.CHT16:0x000000AAr), 5000.0, 3000.0,18000.0, 0.42, 0.42);
			}

			if (tab = the_car.getSfxTable(1))
			{
				tab.clear();
			}

			if (tab = the_car.getSfxTable(2))
			{
				tab.clear();
				tab.addItem(new ResourceRef(parts.engines.CHT16:0x000000ABr), 1500.0,  750.0, 2500.0, 1.0, 1.0);
				tab.addItem(new ResourceRef(parts.engines.CHT16:0x000000ADr), 3000.0, 1500.0, 6200.0, 1.0, 1.0);
				tab.addItem(new ResourceRef(parts.engines.CHT16:0x000000B1r), 6200.0, 4000.0, 18000.0, 1.0, 0.7);
				the_car.setSfxExhaustMinVol(0.6);
			}
		}
	}

	public void addStockParts( Descriptor desc )
	{
		super.addStockParts( desc );

		getCar_LocalVersion();
	}

	public String isDynoable()
	{
		Part p;

		p = partOnSlot( 32 );
		if (!p)
			return "the engine is missing the alternator.";

		return super.isDynoable();
	}
}
